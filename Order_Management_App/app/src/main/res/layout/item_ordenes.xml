<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/separator"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:weightSum="12"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ordenId"
                    android:layout_weight="8"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="ORDEN-01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>


            </LinearLayout>
            <TextView
                android:id="@+id/ordenFecha"
                android:layout_marginLeft="5dp"
                android:textColor="@color/opaqueGray"
                android:text="May 30, 2019, 5:36:09 AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:id="@+id/orden_resumen"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textDirection="anyRtl"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <Button
                android:id="@+id/btn_add_asignar"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:text="Asignar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
            <Button
                android:id="@+id/btn_delete_orden"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:backgroundTint="#ff4040"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:text="ELIMINAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>